.row
  .col-xs-12.col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Login to DBTC
      .panel-body
        = bootstrap_form_tag url: '/login' do |f|
          = f.email_field :email
          = f.password_field :password
          = f.submit "Login", class: "btn btn-success"
